
@model LoginPageModel;
@{
    //ViewData["Title"] = "Login";
    Layout = "_Layout";
    var userName = Model.UserName;
}

<div class="w-100 d-flex justify-content-center flex-column align-items-center">
    <div>
        <h1>Login</h1>
        @if (Model.ErrorMessage != null)
        {
            <span class="text-danger">@Model.ErrorMessage</span>
        }
    </div>
    <form asp-action="LoginUser" class="d-flex flex-column justify-content-center">
        <div class="input-group mt-3">
            <label asp-for="@Model.UserName" class="mr-2">UserName</label>
            <input asp-for="@Model.UserName" placeholder="Enter username here" />
        </div>

        <div class="input-group mt-3">
            <label asp-for="@Model.Password" class="mr-2"></label>
            <input asp-for="@Model.Password" placeholder="Enter password here" />
        </div>

        <button type="submit" class="mt-3 w-30">Login</button>
    </form>
</div>

