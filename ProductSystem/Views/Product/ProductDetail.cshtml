@model EditProductViewModel
@{

    var mode = Model.Mode;
}

<div class="container-fluid">
    <h1>Edit product</h1>

    <div class="edit-form">
        <form asp-action="EditProduct" method="POST">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Mode" value="@mode" />
            <div class="input-group mt-2">
                <label asp-for="Product.Name" class="mr-2">Product Name</label>
                <input asp-for="Product.Name" />
            </div>
            <div class="input-group  mt-2">
                <label asp-for="Product.Price" class="mr-2">Price</label>
                <input asp-for="Product.Price" />
            </div>
            <div class="input-group mt-2">
                <label asp-for="Product.Description" class="mr-2">Description</label>
                <textarea asp-for="Product.Description"></textarea>
            </div>
            <div class="input-group mt-2">
                <label asp-for="Product.Category" class="mr-2">Category</label>
                <input asp-for="Product.Category" class="form-control" />
            </div>
            <div class="input-group mt-2">
                <label asp-for="Product.ProviderId" class="mr-2">ProviderId</label>
                <input asp-for="Product.ProviderId" />
            </div>
            <button type="submit">@ViewData["Title"]</button>
        </form>

        <form asp-action="EditProduct">
            <input type="hidden" asp-for="Mode" value="Delete" />
            <input type="hidden" asp-for="Product.Id" />
            <button type="submit">Delete</button>
        </form>
    </div>
</div>
